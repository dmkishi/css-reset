{
	"plugins": [
		"@stylistic/stylelint-plugin"
	],
  "extends": [
    "stylelint-config-standard",
    "@stylistic/stylelint-config"
  ],
  "rules": {
    "comment-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment"]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["text-size-adjust"]
      }
    ]
  }
}
